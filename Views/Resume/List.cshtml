@model List<Resume.Entities.ResumeEntity>

<h2>Saved Resume Feedbacks</h2>

@if (!Model.Any())
{
    <p>No feedbacks saved yet.</p>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card mt-3 p-3 border shadow-sm">
            <h5 class="mb-3">@item.Name at @item.CreatedAt.ToLocalTime()</h5>

            <p><strong>Name:</strong> @item.Name</p>
            <p><strong>Skills:</strong> @item.SkillsSummary</p>
            <p><strong>Strengths:</strong> @item.Strengths</p>
            <p><strong>Weaknesses:</strong> @item.Weaknesses</p>
            <p><strong>Suggestions:</strong> @item.Suggestions</p>
            <p><strong>Suggested Roles:</strong> @item.SuggestedRoles</p>

            <div class="mt-3 d-flex gap-2">
                <!-- Delete Button -->
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm px-3"
                            title="Delete this resume"
                            onclick="return confirm('Are you sure you want to delete this resume?');">
                        <i class="fa fa-trash me-1"></i> Delete
                    </button>
                </form>

                <!-- Download Button -->
                <form asp-action="DownloadDocxTemp" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="hidden" name="ResumeText" value="@item.ResumeText" />
                    <input type="hidden" name="Name" value="@item.Name" />
                    <input type="hidden" name="SkillsSummary" value="@item.SkillsSummary" />
                    <input type="hidden" name="Strengths" value="@item.Strengths" />
                    <input type="hidden" name="Weaknesses" value="@item.Weaknesses" />
                    <input type="hidden" name="Suggestions" value="@item.Suggestions" />
                    <input type="hidden" name="SuggestedRoles" value="@item.SuggestedRoles" />
                    <input type="hidden" name="UploadedFileName" value="@item.UploadedFileName" />
                    <button type="submit" class="btn btn-outline-success btn-sm rounded-pill shadow-sm px-3"
                            title="Download this resume"
                            onclick="return confirm('Are you sure you want to download this resume?');">
                        <i class="fa fa-download me-1"></i> Download
                    </button>
                </form>
            </div>
        </div>
    }
}
